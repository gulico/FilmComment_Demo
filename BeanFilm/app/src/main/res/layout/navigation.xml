<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        
        <LinearLayout
            android:id="@+id/main_nav_home_tag"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/main_nav_home_ico"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/home_ico"
                android:alpha="1"/>
            <TextView
                android:id="@+id/main_nav_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/home_tag"
                android:textSize="11sp"
                android:textColor="@color/checked_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_nav_mine_tag"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/main_nav_mine_ico"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/mine_ico"
                android:alpha="0.6"></ImageView>
            <TextView
                android:id="@+id/main_nav_mine_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mine_tag"
                android:textSize="11sp"
                android:textColor="@color/nomarl_text"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>